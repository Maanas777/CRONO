                            Mo</a>
                    </p>
                </div>
            </footer>


            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

            <script>
                const delivered=Number(document.getElementById('delivered').innerHTML)
                const pending=Number(document.getElementById('pending').innerHTML)
                const refunded=Number(document.getElementById('refunded').innerHTML)
                const returned=Number(document.getElementById('returned').innerHTML)
                const Cancelled=Number(document.getElementById('Cancelled').innerHTML)
                const ctx = document.getElementById('myChart');Number
                new Chart(ctx,
                    {
                        type: 'pie',
                        data: {
                            labels: [
                            'Refunded', 'Delivered', 'Pending','returned','Cancelled'
                            ],
                            datasets: [{
                                label: 'order',
                                data: [refunded,delivered, pending,returned,Cancelled],
                                backgroundColor: [
                    'rgb(176, 32, 32)',    // Refunded - Red color
                    'rgb(0, 128, 0)',    // Delivered - Blue color
                    'rgb(255, 205, 86)',    // Pending - Yellow color
                    'rgb(255, 165, 0)',    // Returned - Teal color
                    'rgb(255, 140, 0)',    // Cancelled - Orange color
                    'rgb(135, 206, 235)',   // Shipped - Purple color
                    'rgb(50, 205, 50)'      // Placed - Green color
                ],
                                hoverOffset: 4
                            }]
                        }
                    }
                )
            </script>

            <script>
                const ctz = document.getElementById('barchart');

                new Chart(ctz, {
                    type: 'bar',
                    data: {
                        labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                        datasets: [{
                            label: '',
                            data: [12, 19, 3, 5, 2, 3],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            </script>









