        <section class="user-dashboard page-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <div class="dashboard-wrapper user-dashboard">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Product name</th>
                                            <th>Amount</th>
                                            <th>Adress</th>
                                            <th>Image</th>
                                            <th>Payment Method</th>
                                            <th>Status</th>
                                            <th>cancel</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% order.forEach(function(order){ %>
                                            <tr>
                                                <td>
                                                    <%= order.createdAt.toLocaleDateString()Â  %>
                                                </td>
                                                <td>
                                                    <% order.items.forEach(function(item){ %>

                                                        <%= item.product.name %> <br>

                                                            <% }) %>

                                                </td>


                                                <td>
                                                    <%= order.total %>
                                                </td>

                                                <td>
                                                    <%= order.address.name %><br>
                                                        <%= order.address.phone %><br>
                                                            <%= order.address.city%><br>
                                                                <%= order.address.state%>
                                                </td>

                                                <td>
                                                    <% order.items.forEach((item,index)=>{ %>

                                                        <img src=" <%= item.product.photo[0] %>" alt=""
                                                            class="img-thumbnail" width="50px"><br><br>

                                                        <% }) %>

                                                </td>
                                                <td>
                                                    <%= order.payment_method %>
                                                </td>
                                                <td>
                                                    <%= order.status %>
                                                </td>

                                                <td>
                                                    <% if(order.status !== "Cancelled" ) { %>
                                                        <a class="btn btn-sm btn-primary" href="/cancel_product/<%= order._id %>" onclick="return comfirm('Are you sure?')">Cancel</a>
                                                    <% } %>
                                                </td>



                                                <!-- <td><span class="label label-primary">Processing</span></td>
									<td><a href="order.html" class="btn btn-default">View</a></td> -->
                                            </tr>

                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
