<%- include ('../partials/user-Header')%>
  <%- include ('../partials/user_nav')%>


    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/css/bootstrap.min.css">

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <section class="page-header">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="content">
              <h1 class="page-name">Dashboard</h1>
              <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active">my account</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="user-dashboard page-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-md-12">

            <div class="dashboard-wrapper user-dashboard">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Product name</th>
                      <th>Amount</th>
                      <th>Adress</th>
                      <th>Image</th>
                    
                      <th>Payment Method</th>
                      <th>Status</th>


                    </tr>
                  </thead>
                  <tbody>
                    <% order.forEach(function(order){ %>
                      <tr>
                        <td>
                          <%= order.createdAt.toLocaleDateString()Â  %>
                        </td>
                        <td>
                          <% order.items.forEach(function(item){ %>

                            <%= item.product.name %> <br>

                              <% }) %>

                        </td>


                        <td>
                          <%= order.total %>
                        </td>

                        <td>
                          <%= order.address.name %> <br>
                            <%= order.address.state %> <br>
                              <%= order.address.city %> <br>
                                <%= order.address.zip %> <br>
                                  <%= order.address.phone %> <br>
                        </td>

                        <td>
                          <% order.items.forEach((item,index)=>{ %>

                            &nbsp; &nbsp; &nbsp; &nbsp;<img src=" <%= item.product.photo[0] %>" alt="" class="img-thumbnail" width="50px"><br><br>
                            <% }) %>
                            <a href="/view_order/<%=order._id %>"><button type="button" class="btn btn-light">View order</button> </a> 
                        </td>
                     
                        <td>
                          &nbsp; &nbsp; &nbsp; &nbsp; <%= order.payment_method %>
                        </td>
                        <td>
                        <%= order.status %>
                        </td>
                        <td>

                          <% if (order.status !=="Cancelled" && order.status !=="Delivered" && order.status
                            !=="Returned" && order.status !=="Refunded Amount" ) { %>
                            <a type="button" class="btn btn-primary" data-toggle="modal"
                              data-target="#exampleModal<%= order._id %>">
                              Cancel
                            </a>

                            <% } %>

                              <% if (order.status==="Delivered" ) { %>
                                <a type="button" class="btn btn-primary" data-toggle="modal"
                                  data-target="#Return<%= order._id %>">
                                  Return
                                </a>
                                <% } %>


                        </td>

                      </tr>
                      <% }) %>

                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>



    <% order.forEach(function(order){ %>
      <div class="modal fade" id="exampleModal<%= order._id %>" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true">
        <form id="cancelForm " method="POST" action="/cancel_product/<%= order._id %>">
          <div class="modal-dialog" role="document">

            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cancel Product</h5>
                <%= order._id %>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                <label for="cancelReason">Reason for cancellation:</label>
                <textarea id="cancelReason" class="form-control" name="reason"></textarea>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <% }) %>





        <% order.forEach(function(order){ %>
          <div class="modal fade" id="Return<%= order._id %>" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form id="return " method="POST" action="/return_product/<%= order._id %>">
              <div class="modal-dialog" role="document">

                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLab">Return Product</h5>
                    <%= order._id %>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                  </div>
                  <div class="modal-body">
                    <label for="cancelReason">Reason for Returning The Product:</label>
                    <textarea class="form-control" name="reason"></textarea>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <% }) %>







            <%- include ('../partials/user-Footer')%>